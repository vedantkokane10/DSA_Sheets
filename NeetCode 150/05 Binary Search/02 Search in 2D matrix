/*
To map a 1D index (mid) to a 2D matrix:
    - Use row = mid / n and col = mid % n, where n is the number of columns.
    - This works because each row has n elements, so dividing by n gives the row, and the remainder gives the column.
*/

bool searchMatrix(vector<vector<int>>& matrix, int target) {
    int m = matrix.size();
    int n = matrix[0].size();
    int start = 0;
    int end = (m*n)-1;
    while(start <= end){
        int mid = start + (end-start)/2;
        int row = mid / n;
        int col = mid % n;
        if(matrix[row][col] == target){
            return 1;
        }
        else if(matrix[row][col] > target){
            end = mid-1;
        }
        else{
            start = mid+1;
        }
    }
    return 0;
}